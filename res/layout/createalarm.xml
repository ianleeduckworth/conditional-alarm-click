<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/alarmTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TimePicker
        android:id="@+id/mainTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <ToggleButton
            android:id="@+id/sundayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="S"
            android:textOn="S" />

        <ToggleButton
            android:id="@+id/mondayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="M"
            android:textOn="M" />

        <ToggleButton
            android:id="@+id/tuesdayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="T"
            android:textOn="T" />

        <ToggleButton
            android:id="@+id/wednesdayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="W"
            android:textOn="W" />

        <ToggleButton
            android:id="@+id/thursdayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="T"
            android:textOn="T" />

        <ToggleButton
            android:id="@+id/fridayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="F"
            android:textOn="F" />

        <ToggleButton
            android:id="@+id/saturdayToggleButton"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:textOff="S"
            android:textOn="S" />
    </LinearLayout>

    <TextView
        android:id="@+id/isSnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Name"
        android:paddingTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/alarmNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="true" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/conditionsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ConditionsBtn_OnClick"
            android:text="Conditions" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="CancelButton_OnClick"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>